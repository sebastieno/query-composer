@model IEnumerable<SampleApp.Data.Task>

@if (Model.Count() > 0)
{
    <table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Itération</th>
                <th>Statut</th>
                <th>Area</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.Iteration.Name</td>
                    <td>@task.Status.Name</td>
                    <td>@task.Area.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>Aucun résultat.</div>
}